<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/save_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/game_default_image" />

    <TextView
        android:id="@+id/save_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/save_image"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/save_image"
        android:text="Description" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/save_desc"
        android:layout_below="@id/save_desc"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/save_image"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ï¿¥"
            android:textColor="#f73614" />

        <TextView
            android:id="@+id/save_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textColor="#f73614" />

    </LinearLayout>
</RelativeLayout>