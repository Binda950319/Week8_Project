<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRightDefault"
    android:orientation="vertical"
    tools:context="com.wbh.week8_project.activity.Detail2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/detail2_toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolbar"></android.support.v7.widget.Toolbar>

    <ProgressBar
        android:id="@+id/detail2_progress"
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <WebView
        android:id="@+id/detail2_webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></WebView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/detail2_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入收藏" />

        <Button
            android:id="@+id/detail2_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/detail2_buy"
            android:layout_toStartOf="@+id/detail2_buy"
            android:text="加入购物车" />

        <Button
            android:id="@+id/detail2_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="立即购买" />
    </RelativeLayout>
</LinearLayout>
